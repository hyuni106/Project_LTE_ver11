<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_marginTop="3dp"
            android:id="@+id/btn_recommend"
            android:background="@drawable/selector_like_click"/>


        <Button
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/selector_delete_click"
            android:visibility="gone"
            android:id="@+id/btn_delPlan"/>

        <Button
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn_commentPlan"
            android:background="@drawable/selector_comment_click"/>
    </LinearLayout>
</LinearLayout>