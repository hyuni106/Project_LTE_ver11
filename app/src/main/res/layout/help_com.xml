<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text="- 자유게시판"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="사용자가 자유롭게 글을 작성할 수 있는 게시판입니다." />

        <ImageView
            android:id="@+id/helpFree"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/freeboard" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text="- 여행후기 게시판"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="1.사용자가 다녀온 여행지에 대한 후기를 작성하여 다른 사용자와 공유 할 수 있습니다." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="2.다른 사람의 여행후기 중 맘에 드는 후기가 있을 경우 카트에 담아 자신이 갈 여행지에 대해 미리 계획할 수 있습니다." />

        <ImageView
            android:id="@+id/helpTrip"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/tripboard" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text=" - 여행계획 게시판"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="1. 카트에 담아둔 자신의 여행계획을 게시판에 작성하여 다른 사용자에게 조언을 얻을 수 있습니다." />

        <ImageView
            android:id="@+id/helpPlan"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/planboard" />

    </LinearLayout>
</ScrollView>