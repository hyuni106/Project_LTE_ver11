<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/changenick_main"/>


    <EditText
        android:id="@+id/edit_NewNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:hint="닉네임 ( 영문 8글자, 한글 4글자 이하)"
        android:ellipsize="end"
        android:maxLength="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_Checknick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#ff0000" />

        <Button
            android:id="@+id/btn_Checknick"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_overlap_click" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_UpdateNick"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/change_btn" />
</LinearLayout>