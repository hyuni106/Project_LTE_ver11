<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamemain"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/easy"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/easy_btn" />

    <Button
        android:id="@+id/normal"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/normal_btn" />

    <Button
        android:id="@+id/hard"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hard_btn" />

    <Button
        android:id="@+id/game_help"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gamehelp_btn" />
</LinearLayout>