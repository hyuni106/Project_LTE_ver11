<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="1. 커뮤니티에서 내가 쓴 글은 마이페이지를 통해 볼 수 있습니다." />

        <ImageView
            android:id="@+id/helpMyPage"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/mycontent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="2. 자신이 세운 여행 계획은 마이페이지의 내가 세운 계획에서 볼 수 있습니다." />

        <ImageView
            android:id="@+id/helpMyPlan"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/myplan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="3. SOS 긴급 연락처와 문구를 마이페이지 SOS설정에서 변경할 수 있습니다." />

        <ImageView
            android:id="@+id/helpSosSet"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/setsos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="4. 마이페이지에서 비밀번호 및 닉네임을 변경할 수 있으며 회원 탈퇴를 할 수 있습니다." />

        <ImageView
                android:id="@+id/helpChangeNick"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/changepw"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/helpChangePw"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/changenick"/>

    </LinearLayout>
</ScrollView>